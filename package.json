{
  "name": "erm-telegram-web-bot",
  "private": true,
  "description": "Вспомогательные зависимости для запуска ESLint и тестов.",
  "scripts": {
    "predev": "node scripts/ensure-fonts.mjs",
    "prebuild": "node scripts/ensure-fonts.mjs && node scripts/generate_hero_images.mjs",
    "pretest": "pnpm --filter shared build",
    "pretest:unit": "pnpm --filter shared build",
    "pretest:api": "pnpm --filter shared build",
    "pretest:e2e": "./scripts/ensure_playwright_browsers.sh && ./scripts/run_playwright_diagnostics.sh && ./scripts/build_with_tmp.sh",
    "build": "pnpm --filter shared build && pnpm -r --filter '!shared' build && npx tsc scripts/db/ensureDefaults.ts scripts/db/repairCollections.ts --module commonjs --target ES2020 --outDir dist --rootDir . --types node && node dist/scripts/db/ensureDefaults.js",
    "dev": "PNPM_SCRIPT_TIMEOUT=0 pnpm -r dev",
    "lint": "pnpm -r lint",
    "a11y": "ts-node scripts/a11y.ts",
    "test:e2e": "playwright test",
    "test:api": "TS_NODE_PROJECT=apps/api/tsconfig.json mocha -r ts-node/register -r tests/setupEnv.ts tests/api/**/*.spec.ts",
    "test:unit": "jest",
    "format": "prettier --write .",
    "test": "pnpm test:unit && pnpm test:api && pnpm test:e2e",
    "prepare-client": "./scripts/build_client.sh",
    "size": "size-limit",
    "repair:collections": "node dist/scripts/db/repairCollections.js"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.29.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.49.0",
    "@size-limit/file": "^11.1.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^15.0.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/leaflet": "^1.9.20",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.29.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "globals": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jiti": "^2.5.1",
    "lighthouse": "^12.8.2",
    "mocha": "^10.7.3",
    "mongodb": "6.18.0",
    "mongoose": "8.16.0",
    "playwright": "^1.54.2",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "size-limit": "^11.1.2",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.7",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "ttf2woff2": "^8.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.14"
  },
  "pnpm": {
    "overrides": {
      "glob": "^7.2.3",
      "rimraf": "^6.0.1",
      "uuid": "^9.0.0",
      "quill": "^2.0.3",
      "jspdf@<=3.0.1": ">=3.0.2",
      "@ckeditor/ckeditor5-clipboard@>=40.0.0 <43.1.1": ">=43.1.1",
      "ckeditor5@>=40.0.0 <43.1.1": ">=43.1.1",
      "zod": "^4.1.5",
      "dompurify@<3.2.4": ">=3.2.4",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "react-is": "18.3.1",
      "hoist-non-react-statics": "3.3.2",
      "use-sync-external-store": "1.5.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "@ckeditor/ckeditor5-clipboard@>=46.0.0 <46.0.3": ">=46.0.3",
      "ckeditor5@>=46.0.0 <46.0.3": ">=46.0.3",
      "undici": "6.21.0"
    },
    "allowedBuiltDependencies": [
      "esbuild",
      "ffmpeg-static",
      "mongodb-memory-server",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@scarf/scarf",
      "@tailwindcss/oxide",
      "chromedriver",
      "core-js",
      "ttf2woff2",
      "unrs-resolver"
    ],
    "patchedDependencies": {
      "use-isomorphic-layout-effect@1.2.1": "patches/use-isomorphic-layout-effect@1.2.1.patch"
    }
  },
  "packageManager": "pnpm@10.15.0",
  "size-limit": [
    {
      "path": "apps/api/public/js/index-*.js",
      "limit": "900 KB"
    }
  ]
}
