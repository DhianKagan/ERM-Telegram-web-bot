# Назначение файла: пример продакшен-переменных Railway. Секреты заполняем в консоли Railway.
NODE_ENV=production

# Telegram
BOT_TOKEN=<укажите_в_Railway>
BOT_USERNAME=your_bot_username
BOT_API_URL=https://api.telegram.org
CHAT_ID=<telegram_group_chat_id>
JWT_SECRET=<укажите_в_Railway>
SESSION_SECRET=<укажите_в_Railway>

# База данных
MONGO_DATABASE_URL=mongodb://mongo:<пароль>@<mongodb-service>.railway.internal:27017/<db-name>?authSource=admin

# Приложение и API
APP_URL=https://<your-project>.up.railway.app
APP_ORIGIN=https://<your-project>.up.railway.app
LOCALE=ru
SCHEDULE_CRON=0 8 * * *
STORAGE_DIR=/storage
CORS_ORIGINS=https://<your-project>.up.railway.app
COOKIE_DOMAIN=<your-project>.up.railway.app
RAILWAY_DOCKERFILE_PATH=Dockerfile

# Маршруты и CSP
ROUTING_URL=https://router.project-osrm.org
# Веб-клиент использует конечный маршрутный endpoint OSRM
VITE_ROUTING_URL=https://router.project-osrm.org/route/v1/driving
VITE_DISABLE_SSE=0
VITE_BOT_USERNAME=your_bot_username
VITE_CHAT_ID=<telegram_group_chat_id>

CSP_CONNECT_SRC_ALLOWLIST=
CSP_IMG_SRC_ALLOWLIST=
CSP_FONT_SRC_ALLOWLIST=

CSP_SCRIPT_SRC_ALLOWLIST=blob:
CSP_STYLE_SRC_ALLOWLIST=
CSP_REPORT_ONLY=true

# Railway подставляет порт автоматически, переменные PORT и HOST_PORT не задаём

LHCI_GITHUB_APP_TOKEN=
