{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmitOnError": false,
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true
  },
  "include": ["src", "scripts"]
}
