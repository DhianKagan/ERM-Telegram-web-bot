{
  "name": "telegram-task-bot",
  "version": "1.0.0",
  "main": "src/bot/bot.js",
  "types": "bot.d.ts",
  "scripts": {
    "pretest": "pnpm --filter shared build",
    "test": "node -r ./node_modules/ts-node/register ./node_modules/jest/bin/jest.js --coverage",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc -b",
    "build-client": "pnpm --dir ../web run build",
    "format": "prettier --config ../prettier.config.cjs \"src/**/*.{js,ts}\"",
    "check:mongo": "node ../../scripts/check_mongo.mjs",
    "chaos": "ts-node ../../scripts/chaos.ts",
    "test:types": "tsd --cwd apps/api --project tsconfig.json --files tests/requestWithUser.test-d.ts --files src/types/request.ts",
    "stress": "locust -f ../loadtest/locustfile.py --host http://localhost:3000 --users 300 --spawn-rate 30",
    "lint": "node --loader ts-node/esm ./node_modules/eslint/bin/eslint.js -c ../../eslint.config.ts src"
  },
  "author": "",
  "license": "ISC",
  "description": "Бот задач с REST API, работающий под управлением pm2",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@telegram-apps/init-data-node": "^2.0.10",
    "@wgtechlabs/log-engine": "^2.2.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9",
    "lusca": "^1.7.0",
    "mongoose": "^8.16.0",
    "multer": "^2.0.2",
    "clamscan": "^2.4.0",
    "node-cron": "^4.1.1",
    "node-vault": "^0.10.5",
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "pm2": "^6.0.8",
    "prom-client": "^14.2.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.14",
    "sharp": "^0.33.3",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.1.0",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "^4.16.3",
    "tsyringe": "^4.10.0",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@types/babel__core": "^7.20.5",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lusca": "^1.7.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.7",
    "@types/qs": "^6.9.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "babel-jest": "^30.0.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^9.29.0",
    "husky": "^9.0.11",
    "jest": "^30.0.3",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/../../tests/setupEnv.ts"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "node -r ./node_modules/ts-node/register ./node_modules/eslint/bin/eslint.js --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "private": true
}
