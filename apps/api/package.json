{
  "name": "telegram-task-bot",
  "version": "1.0.0",
  "main": "src/bot/bot.js",
  "types": "bot.d.ts",
  "scripts": {
    "pretest": "pnpm --filter shared build",
    "test": "pnpm exec cross-env NODE_ENV=test dotenv -e .env.test -- pnpm exec jest --config ../../jest.config.ts --runInBand --coverage",
    "start": "node dist/server.js",
    "dev": "pnpm exec ts-node src/server.ts",
    "build": "pnpm exec tsc -b",
    "build-client": "pnpm --dir ../web run build",
    "format": "pnpm exec prettier --config ../../prettier.config.cjs \"src/**/*.{js,ts}\"",
    "check:mongo": "node ../../scripts/check_mongo.mjs",
    "chaos": "pnpm exec ts-node ../../scripts/chaos.ts",
    "test:types": "tsd --cwd apps/api --project tsconfig.json --files tests/requestWithUser.test-d.ts --files src/types/request.ts",
    "stress": "locust -f ../loadtest/locustfile.py --host http://localhost:3000 --users 300 --spawn-rate 30",
    "lint": "pnpm exec eslint -c ../../eslint.config.ts src",
    "lint:lpt": "pnpm exec eslint -c ../../eslint.lpt.config.ts src"
  },
  "author": "",
  "license": "ISC",
  "description": "Бот задач с REST API, работающий под управлением pm2",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@tma.js/init-data-node": "^2.0.3",
    "clamdjs": "^1.0.2",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "domhandler": "^5.0.3",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^8.1.0",
    "htmlparser2": "^10.0.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9",
    "lusca": "^1.7.0",
    "mongoose": "^8.16.0",
    "multer": "^2.0.2",
    "node-cron": "^4.1.1",
    "node-vault": "^0.10.5",
    "pdfmake": "^0.2.20",
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "pm2": "^6.0.8",
    "prom-client": "^14.2.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.14",
    "shared": "workspace:*",
    "sharp": "^0.33.3",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "^4.16.3",
    "tsyringe": "^4.10.0",
    "undici": "6.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lusca": "^1.7.5",
    "@types/multer": "^2.0.0",
    "@types/pdfmake": "^0.2.12",
    "@types/qs": "^6.9.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^11.0.0",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.0.0",
    "tsd": "^0.31.0"
  },
  "private": true
}